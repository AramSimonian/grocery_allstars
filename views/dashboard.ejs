<%+ extend('layout') %>
<%+ section('content') %>

<div class="row center">
    <h5 class="header col s12 light">Please scan and enter your groceries </h5>
</div>

<ul class="collection">
    <% products.forEach(function(product) { %>
    <li class="collection-item avatar">
        <img src="<%= product.attributes.thumbnail_url%>" alt="" class="circle">
        <span class="title" style="color:#26a69a;text-transform: uppercase;"><%= product.attributes.name %></span>
        <p>
            Expires: <%= (product.attributes.expiry).getDate() + '-' + (product.attributes.expiry).getMonth() + '-' + (product.attributes.expiry).getFullYear() %>
            <span class="mdl-list__item-secondary-info"><%= Math.ceil((product.attributes.expiry.getTime() - (new Date()))/ (1000*3600*24)) %> day(s)</span>
        </p>
        <!--<a href="#!" class="secondary-content"><i class="material-icons">local_grocery_store</i></a>-->
    </li>
    <% }); %>

</ul>

