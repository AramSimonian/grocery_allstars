<%+ extend('layout') %>
<%+ section('content') %>
<div class="demo-updates mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop">
    <div class="mdl-card__title mdl-card--expand mdl-color--teal-300">
        <h2 class="mdl-card__title-text">Products</h2>
    </div>
    <div class=" demo-list-container mdl-card__supporting-text mdl-color-text--grey-600">
        <ul class="demo-list-two mdl-list">
            <% products.forEach(function(product) { %>
            <li id="<%= product.attributes.barcode %>" class="mdl-list__item mdl-list__item--two-line">
                <span class="mdl-list__item-primary-content">
                    <i class="material-icons mdl-list__item-avatar">person</i>
                    <span><%= product.attributes.name %></span>
                    <span class="mdl-list__item-sub-title">Expires: </span>
                </span>
                <span class="mdl-list__item-secondary-content">
                    <span class="mdl-list__item-secondary-info">In date</span>
                    <a class="mdl-list__item-secondary-action" href="#"><i class="material-icons">star</i></a>
                </span>
            </li>
            <% }); %>
        </ul>
    </div>
    <div class="mdl-card__actions mdl-card--border">
        <a href="#" class="mdl-button mdl-js-button mdl-js-ripple-effect">Read More</a>
    </div>
</div>

<%+ endSection %>